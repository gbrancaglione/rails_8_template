<main class="py-10">
  <div class="mx-auto max-w-7xl px-4 py-24 sm:px-6 sm:py-16 lg:px-8">
    <%= form_with(model: @user, local: true, url: backoffice_user_path(@user), method: :patch) do |f| %>
      <div class="space-y-12">
        <div class="border-b border-gray-900/10 pb-12">
          <h2 class="text-base/7 font-semibold text-gray-900">Edit User Information</h2>
          <p class="mt-1 text-sm/6 text-gray-600">Update the user email address and password.</p>

          <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
            <div class="sm:col-span-4">
              <%= f.label :email_address, "Email address", class: "block text-sm/6 font-medium text-gray-900" %>
              <div class="mt-2">
                <%= f.email_field :email_address, id: "email", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= f.label :password, "Password", class: "block text-sm/6 font-medium text-gray-900" %>
              <div class="mt-2">
                <%= f.password_field :password, id: "password", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm/6 font-medium text-gray-900" %>
              <div class="mt-2">
                <%= f.password_field :password_confirmation, id: "password_confirmation", class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-6 flex items-center justify-end gap-x-6">
        <%= link_to "Cancel", backoffice_users_path, class: "text-sm/6 font-semibold text-gray-900" %>
        <%= f.submit "Save Changes", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    <% end %>
  </div>
</main>
